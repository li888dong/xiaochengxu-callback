/* pages/call/call.wxss */
.lb{
  width: 300%;
  height: 320rpx;
  overflow: hidden;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  
}
.lb1{
  width: 100%;
  background-color: yellow;
  height: 320rpx;
}
.lb2{
  width: 100%;
  
  background-color: purple;
  height: 320rpx;
}
.lb3{
  width: 100%;
  
  background-color: orangered;
  height: 320rpx;
}
.keybord{
  background: yellowgreen;
  height: 640rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around
}
.key1{
  height: 160rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between
}
.key2{
  width: 33%;
  border: 1px solid #eee;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center

}
.toCall{
  padding: 10rpx;
}
.lb{
  animation: lb 15s ease-out infinite alternate
}
@keyframes lb{
  0%,25% {        margin-left: 0;       }
  30%,50% {       margin-left: -100%;    }
  55%,75% {       margin-left: -200%;    }
  80%,100% {       margin-left: 0;    }
}